<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/angrytoolbackground"
    tools:context=".ScoreActivity">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:type="linear"
        app:cardBackgroundColor="#FF99DAFF"
        card_view:cardCornerRadius="40dp">
        <RelativeLayout
            android:background="@drawable/angrytoolbackground2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/textFixed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Score"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textScore"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="24/30"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="30sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/buttonRetake"
            android:layout_height="wrap_content"
            android:onClick="retakeQuiz"
            android:layout_weight="50"
            android:text="RETAKE QUIZ"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/buttonEpisodeList"
            android:layout_height="wrap_content"
            android:onClick="episodeList"
            android:layout_weight="50"
            android:text="Episode List"
            android:layout_width="wrap_content" />
    </LinearLayout>


</RelativeLayout>